@model IEnumerable<PPTRANControlesWebApp.Models.Administracao.RepasseViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link href="~/Content/vendors/dataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
}

<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <h2> Valor exame Medico / Psicologo&emsp;&emsp;
                        <a asp-action="Create" class="glyphicon glyphicon-plus-sign"></a>
                    </h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.ClinicaAlias)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Profissional)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Valor)
                                </th>
                                <th>
                                    Opções
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ClinicaAlias)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Profissional)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Valor)
                                    </td>
                                    <td>
                                        &emsp;&emsp;
                                        <a asp-action="Edit" asp-route-id="@item.RepasseId" class="glyphicon glyphicon-edit"></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
