@model Models.Repasse

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link href="~/Content/vendors/dataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
}

<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <h2> Valor exame Medico / Psicologo</h2>
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Profissional" class="control-label"></label>
                            <input asp-for="Profissional" class="form-control" />
                            <span asp-validation-for="Profissional" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Valor" class="control-label"></label>
                            <input asp-for="Valor" type="text" class="form-control" />
                            <span asp-validation-for="Valor" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <input type="submit" value="Salvar" class="btn btn-primary" />
                            <a asp-action="Index" class="btn btn-danger">Retornar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
