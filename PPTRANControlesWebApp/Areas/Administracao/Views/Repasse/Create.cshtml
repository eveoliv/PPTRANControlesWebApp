@model PPTRANControlesWebApp.Models.Administracao.RepasseViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link href="~/Content/vendors/dataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
}

<div class="page-title">
    <div class="clearfix"></div>
    <div class="col-md-12 ">
        <div class="row">

            <div class="x_panel">
                <div class="x_title">
                    <h2>
                        Cadastrar repasse para nova Clinica
                    </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        &emsp;&emsp;&emsp;&emsp;
                        <a asp-action="Index" class="glyphicon glyphicon-minus-sign"></a>
                    </ul>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="item form-group">
                            <label asp-for="ClinicaAlias" for="middle-name" class="col-form-label col-md-3 col-sm-3 label-align"></label>
                            <div class="col-md-6 col-sm-6">
                                <select asp-for="ClinicaId" class="form-control" asp-items="@(new SelectList(@ViewBag.Clinicas, "Id", "Alias"))" required="required"></select>
                            </div>
                        </div>

                        <div class="item form-group">
                            <label asp-for="Profissional" for="middle-name" class="col-form-label col-md-3 col-sm-3 label-align"></label>
                            <div class="col-md-6 col-sm-6">
                                <select asp-for="Profissional" class="form-control" asp-items="@(new SelectList(@ViewBag.Funcoes))" required="required"></select>                                                               
                            </div>
                        </div>

                        <div class="item form-group">
                            <label asp-for="Valor" class="col-form-label col-md-3 col-sm-3 label-align"></label>
                            <div class="col-md-6 col-sm-6 ">
                                <input asp-for="Valor" type="text" class="form-control" required="required">
                                <span asp-validation-for="Valor" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="ln_solid"></div>
                        <div class="item form-group">
                            <div class="col-md-12 col-sm-12 offset-md-2">
                                <button type="submit" class="btn btn-success">Salvar</button>
                                <a asp-action="Index" class="btn btn-primary">Cancelar</a>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>