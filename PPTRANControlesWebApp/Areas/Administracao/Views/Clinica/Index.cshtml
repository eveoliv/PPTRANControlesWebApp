@model IEnumerable<Models.Clinica>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link href="~/Content/vendors/dataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
}

<div class="page-title">
    <div class="clearfix"></div>
    <div class="col-md-12 ">
        <div class="row">

            <div class="x_panel">
                <div class="x_title">
                    <h2>Clinicas Cadastradas</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <a asp-action="Create">Nova</a>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">
                                <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ClinicaId)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Nome)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.CNPJ)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Alias)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Email)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Tel1)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Tel2)
                                            </th>
                                            <th>
                                                Opções
                                            </th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ClinicaId)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Nome)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CNPJ)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Alias)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Email)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Tel1)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Tel2)
                                                </td>
                                                <td>
                                                    <a asp-action="Details" asp-route-id="@item.ClinicaId" class="glyphicon glyphicon-zoom-in"></a> |
                                                    <a asp-action="Edit" asp-route-id="@item.ClinicaId" class="glyphicon glyphicon-edit"></a> |
                                                    <a asp-action="Delete" asp-route-id="@item.ClinicaId" class="glyphicon glyphicon-trash"></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section ScriptPage{
    <script type="text/javascript" src="~/Content/vendors/dataTables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').DataTable();
        });
    </script>
}
