@model IEnumerable<Models.Caixa>

@{
    ViewData["Title"] = "Recibo";
}

<div class="page-title">
    <div class="clearfix"></div>
    <div class="col-md-12 ">
        <div class="row">
            <div class="x_panel">
                <div class="x_title">

                    @if (@ViewBag.ClinicaNome != null)
                    {
                        <center>
                            <br />
                            <img src="~/Content/build/images/PptrLogo.png" width="40" height="30" />
                            CLINICA @ViewBag.ClinicaNome
                            <br />
                            @ViewBag.ClinicaRuaNum, @ViewBag.ClinicaBairroFone

                        </center>

                        <hr />
                        <p>
                            Recebemos do Sr (a). @ViewBag.ClienteNome, CPF @ViewBag.ClienteCpf,
                            a quantia de R$ @ViewBag.ValotTotal.ToString("F") ( @ViewBag.ValorExt ) correspondente ao(s) serviço(s) relacionado(s) abaixo:
                        </p>
                        <table class="">
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @if (item.Produto.Nome == "Valor Fracionado")
                                            {

                                            }
                                            else
                                            {
                                                @Html.DisplayFor(modelItem => item.Produto.Nome)
                                            }
                                        </td>
                                        @*<td>
                                                @Html.DisplayFor(modelItem => item.Valor)
                                            </td>*@
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <hr />
                        <p>@ViewBag.Data</p>
                        <p></p>
                        <p>
                            &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
                            &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
                            _____________________________________________________
                        </p>
                        <p>
                            &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;
                            &emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&emsp;&ensp;
                            @ViewBag.ColabNome
                        </p>
                        <center>

                        </center>
                    }
                    else
                    {
                        <p>Não existem valores quitados para geração de recibo.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <ul class="nav navbar-right panel_toolbox">
        <a asp-area="Operacao" asp-controller="Cliente" asp-action="Index" class="glyphicon glyphicon-minus-sign"></a>&nbsp;&nbsp;
        <a asp-action="" onClick="window.print()" class="glyphicon glyphicon-print"></a>
    </ul>
</div>
