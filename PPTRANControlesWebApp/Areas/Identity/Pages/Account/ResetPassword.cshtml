@page
@model ResetPasswordModel

@{
    ViewData["Title"] = "Alterar Senha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section styles {
    <link href="~/Content/vendors/dataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
}

<div class="page-title">
    <div class="clearfix"></div>
    <div class="col-md-12 ">
        <div class="row">

            <div class="x_panel">
                <div class="x_title">
                    <h2>Alteração de Senha &emsp;&emsp;&emsp;&emsp;&emsp;</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="glyphicon glyphicon-minus-sign"></a>
                    </ul>
                    <div class="clearfix"></div>
                </div>

                <div class="x_content">
                    <form method="post">
                        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                        <input asp-for="Input.Code" type="hidden" />
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" disabled="disabled" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password">Nova Senha</label>
                            <input asp-for="Input.Password" class="form-control"/>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword">Confirmar Senha</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control"/>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Confirmar</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
