@model IEnumerable<Models.Cliente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link href="~/Content/vendors/dataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
}

<div class="page-title">
    <div class="clearfix"></div>
    <div class="col-md-12 ">
        <div class="row">

            <div class="x_panel">
                <div class="x_title">
                    <h2>Lista de Clientes Clinica ABCD</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <a asp-action="Create">Novo</a>&nbsp;|&nbsp;
                        <a asp-action="" onClick="window.print()">Imprimir</a>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">
                                <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Id)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.DtCadastro)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Nome)
                                            </th>
                                            @*<th>
                                                    @Html.DisplayNameFor(model => model.NumRenach)
                                                </th>*@
                                            @*<th>
                                                    @Html.DisplayNameFor(model => model.CNH)
                                                </th>*@
                                            <th>
                                                @Html.DisplayNameFor(model => model.CPF)
                                            </th>
                                            @*<th>
                                                    @Html.DisplayNameFor(model => model.Categoria)
                                                </th>*@
                                            <th>
                                                @Html.DisplayNameFor(model => model.Telefone)
                                            </th>
                                            @*<th>
                                                    @Html.DisplayNameFor(model => model.Clinica)
                                                </th>*@
                                            <th>
                                                Opções
                                            </th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Id)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DtCadastro)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Nome)
                                                </td>
                                                @*<td>
                                                        @Html.DisplayFor(modelItem => item.NumRenach)
                                                    </td>*@
                                                @*<td>
                                                        @Html.DisplayFor(modelItem => item.CNH)
                                                    </td>*@
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CPF)
                                                </td>
                                                @*<td>
                                                    @Html.DisplayFor(modelItem => item.Categoria)
                                                </td>*@
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Telefone)
                                                </td>

                                                @*<td>
                                                    @Html.DisplayFor(modelItem => item.Clinica.Alias)
                                                </td>*@
                                                <td>
                                                    <a asp-area="Financeiro" asp-controller="Produto" asp-action="Carrinho" asp-route-id="@item.Id" class="glyphicon glyphicon-shopping-cart"></a>
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="glyphicon glyphicon-zoom-in"></a> |
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="glyphicon glyphicon-edit"></a> |
                                                    <a asp-action="EntrevistaPsi" asp-route-id="@item.Id" class="glyphicon glyphicon-star-empty"></a>
                                                    <a asp-action="EntrevistaMed" asp-route-id="@item.Id" class="glyphicon glyphicon-star"></a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="glyphicon glyphicon-trash"></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section ScriptPage{
    <script type="text/javascript" src="~/Content/vendors/dataTables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').DataTable();
        });
    </script>
}
