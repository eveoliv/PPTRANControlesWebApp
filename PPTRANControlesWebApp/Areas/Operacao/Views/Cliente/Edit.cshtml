@model Models.Cliente

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link href="~/Content/vendors/dataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
}

<div class="">
    <div class="col-md-8 col-sm-8  ">
        <div class="x_panel">
            <div class="x_title">
                <h2>Editar Ficha do Cliente</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <a asp-action="Index">Retornar</a>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <ul class="nav nav-tabs bar_tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Contato</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="second-tab" data-toggle="tab" href="#second" role="tab" aria-controls="second" aria-selected="false">Informações Gerais</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Documentos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Endereço</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="contact-tab" data-toggle="tab" href="#clinic" role="tab" aria-controls="contact" aria-selected="false">Clinica</a>
                    </li>
                </ul>

                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <div class="tab-content" id="myTabContent">

                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                <div>
                                    <hr />
                                    <dl class="row">
                                        @Html.HiddenFor(model => model.Id)
                                        @Html.HiddenFor(model => model.DtCadastro)
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.Nome)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="Nome" type="text" class="form-control">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.Telefone1)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="Telefone1" type="text" class="form-control" data-inputmask="'mask' : '(99) 99999-9999'">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.Telefone2)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="Telefone2" type="text" class="form-control" data-inputmask="'mask' : '(99) 9999-9999'">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.Email)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="Email" type="text" class="form-control">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.Obs)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="Obs" type="text" class="form-control">
                                        </dd>

                                    </dl>
                                </div>
                            </div>

                            <div class="tab-pane fade" id="second" role="tabpanel" aria-labelledby="profile-tab">
                                <div>
                                    <hr />
                                    <dl class="row">
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.Pai)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="Pai" type="text" class="form-control">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.Mae)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="Mae" type="text" class="form-control">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.Nacionalidade)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="Nacionalidade" type="text" class="form-control">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.Naturalidade)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="Naturalidade" type="text" class="form-control">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.EstadoCivil)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="EstadoCivil" type="text" class="form-control">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.DtNascimento)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="DtNascimento" type="date" class="form-control" data-inputmask="'mask': '99/99/9999'">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.Profissao)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="Profissao" type="text" class="form-control">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.Escolaridade)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="Escolaridade" type="text" class="form-control">
                                        </dd>
                                    </dl>
                                </div>
                            </div>



                            <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                                <div>
                                    <hr />
                                    <dl class="row">
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.CPF)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="CPF" type="text" class="form-control" data-inputmask="'mask': '999.999.999-99'">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.RG)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="RG" type="text" class="form-control" data-inputmask="'mask': '99.999.999-9'">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.CNH)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="CNH" type="text" class="form-control">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.Categoria)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <select asp-for="Categoria" class="form-control" asp-items="@Html.GetEnumSelectList<Models.EnumHelper.Categoria>()">
                                                <option selected="selected" value="">Categoria</option>
                                            </select>
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.NumRenach)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="NumRenach" type="text" class="form-control">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.DtHabHum)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="DtHabHum" type="date" class="form-control" data-inputmask="'mask': '99/99/9999'">
                                        </dd>
                                    </dl>
                                </div>
                            </div>

                            <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
                                <div>
                                    <hr />
                                    <dl class="row">
                                        @Html.HiddenFor(model => model.Endereco.Id)
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.Endereco.Cep)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="Endereco.Cep" type="text" class="form-control">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.Endereco.Rua)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="Endereco.Rua" type="text" class="form-control">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.Endereco.Bairro)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="Endereco.Bairro" type="text" class="form-control">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.Endereco.Cidade)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="Endereco.Cidade" type="text" class="form-control">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.Endereco.Estado)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="Endereco.Estado" type="text" class="form-control">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.Endereco.Numero)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="Endereco.Numero" type="number" class="form-control">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.Endereco.Complto)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="Endereco.Complto" type="text" class="form-control">
                                        </dd>
                                    </dl>
                                </div>
                            </div>

                            <div class="tab-pane fade" id="clinic" role="tabpanel" aria-labelledby="clinic-tab">
                                <div>
                                    <hr />
                                    <dl class="row">
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.DtCadastro)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="DtCadastro" type="text" class="form-control">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.NumLaudo)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <input asp-for="NumLaudo" type="text" class="form-control">
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.Clinica.Alias)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <select asp-for="ClinicaId" class="form-control" asp-items=@ViewBag.Clinicas></select>
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">@Html.DisplayNameFor(model => model.Historico.Nome)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <select asp-for="HistoricoId" class="form-control" asp-items=@ViewBag.Historico></select>
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">Médico (a)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <select asp-for="MedicoId" class="form-control" asp-items=@ViewBag.Medico></select>
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">Psicólogo (a)</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <select asp-for="PsicologoId" class="form-control" asp-items=@ViewBag.Psicologo></select>
                                        </dd>
                                        <dt class="col-form-label col-md-3 col-sm-3 ">Pagamento Realizado</dt>
                                        <dd class="col-md-9 col-sm-9 ">
                                            <select asp-for="StatusPgto" class="form-control" asp-items="@Html.GetEnumSelectList<Models.EnumHelper.YesNo>()">
                                                <option selected="selected" value=""></option>
                                            </select>
                                        </dd>
                                    </dl>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <input type="submit" value="Salvar" class="btn btn-success" />
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>