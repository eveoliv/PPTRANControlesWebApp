@model IEnumerable<Models.Agenda>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section styles {
    <link href="~/Content/vendors/dataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
}

<div class="page-title">
    <div class="clearfix"></div>
    <div class="col-md-12 ">
        <div class="row">

            <div class="x_panel">
                <div class="x_title">
                    <h2>Agendamentos </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <a asp-action="Create" class="glyphicon glyphicon-plus-sign"></a>&nbsp;&nbsp;
                        <a asp-action="" onClick="window.print()" class="glyphicon glyphicon-print"></a>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="card-box table-responsive">
                                <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Data)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Hora)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Nome)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Telefone1)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Telefone2)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Medico)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Psicologo)
                                            </th>

                                            @*<th>
                                                    @Html.DisplayNameFor(model => model.Clinica)
                                                </th>*@
                                            <th>
                                                Obs
                                            </th>
                                            <th>
                                                Opções
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                @Html.HiddenFor(modelItem => item.Id)
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Data)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Hora)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Nome)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Telefone1)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Telefone2)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Medico)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Psicologo)
                                                </td>

                                                @*<td>
                                                        @Html.DisplayFor(modelItem => item.Clinica)
                                                    </td>*@

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Obs)
                                                </td>
                                                <td>
                                                    &emsp;
                                                    @*<a asp-action="Details" asp-route-id="@item.Id" class="glyphicon glyphicon-zoom-in"></a>*@
                                                    <a asp-action="Edit" asp-route-id="@item.Id" class="glyphicon glyphicon-edit"></a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="glyphicon glyphicon-trash"></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section ScriptPage{
    <script type="text/javascript" src="~/Content/vendors/dataTables/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').DataTable();
        });
    </script>

}        