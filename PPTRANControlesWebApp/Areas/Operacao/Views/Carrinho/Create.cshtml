@model PPTRANControlesWebApp.Models.Operacao.CarrinhoViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="right_col" role="main">
    <div class="">
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Incluir Exames Para: @ViewBag.Cliente</h2>
                        <ul class="nav navbar-right panel_toolbox"></ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="Id" type="hidden" class="form-control" />

                            <div class="item form-group">
                                <label asp-for="Carrinho.Data" class="col-form-label col-md-4 col-sm-4 label-align"></label>
                                <div class="col-md-8 col-sm-8 ">
                                    <input asp-for="Carrinho.Data" type="text" value="@DateTime.Today.ToString("dd/MM/yyyy")" class="form-control" required="required" data-inputmask="'mask': '99/99/9999'" disabled="disabled">
                                </div>
                            </div>

                            <div class="item form-group">
                                <label class="col-form-label col-md-4 col-sm-4 label-align">Exame 1</label>
                                <div class="col-md-8 col-sm-8 ">
                                    <select asp-for="Carrinho.Produto1Id" class="form-control" asp-items="@(new SelectList(@ViewBag.Produtos, "Id", "Nome"))" required="required">
                                        <option selected="selected" value="">Selecionar</option>
                                    </select>

                                </div>
                            </div>

                            <div class="item form-group">
                                <label class="col-form-label col-md-4 col-sm-4 label-align">Exame 2</label>
                                <div class="col-md-8 col-sm-8 ">
                                    <select asp-for="Carrinho.Produto2Id" class="form-control" asp-items="@(new SelectList(@ViewBag.Produtos, "Id", "Nome"))">
                                        <option selected="selected" value="">Selecionar</option>
                                    </select>

                                </div>
                            </div>

                            <div class="item form-group">
                                <label class="col-form-label col-md-4 col-sm-4 label-align">Baixar no Caixa</label>
                                <div class="col-md-8 col-sm-8 ">
                                    @Html.DropDownList("FormaPagamento", ViewData["FormaPagamento"] as SelectList, new { @class = "form-control" })
                                </div>
                            </div>
                            

                            @if (@ViewBag.Caixa > 0)
                            {
                                <p> </p>
                                <p><span style="color: #f00;">* O cliente ja possui exames não pagos cadastrados no caixa!</span></p>
                            }

                            <div class="ln_solid"></div>
                            <div class="item form-group">
                                <div class="col-md-12 col-sm-12 offset-md-2">
                                    <button type="submit" class="btn btn-success">Incluir</button>
                                    <a asp-controller="Cliente" asp-action="Index" class="btn btn-primary">Cancelar</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


