@model IEnumerable<Models.Colaborador>

    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    @section styles {
        <link href="~/Content/vendors/dataTables/css/dataTables.bootstrap.min.css" rel="stylesheet" />
    }

    <div class="">

        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Lista de Colaboradores Clinica ABCD</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive">
                                    <table id="datatable" class="table table-striped table-bordered" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.ColaboradorId)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Nome)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.CPF)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.Funcao)
                                                </th>
                                                <th>
                                                    Foo
                                                </th>
                                                <th>
                                                    Opções
                                                </th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ColaboradorId)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Nome)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CPF)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Funcao)
                                                    </td>
                                                    <td>
                                                        Foo
                                                    </td>
                                                    <td>
                                                        <a asp-action="Edit" asp-route-id="@item.ColaboradorId" class="glyphicon glyphicon-edit"></a> |
                                                        <a asp-action="Details" asp-route-id="@item.ColaboradorId" class="glyphicon glyphicon-zoom-in"></a> |
                                                        <a asp-action="Delete" asp-route-id="@item.ColaboradorId" class="glyphicon glyphicon-trash"></a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section ScriptPage{
        <script type="text/javascript" src="~/Content/vendors/dataTables/js/jquery.dataTables.min.js"></script>
        <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').DataTable();
        });
        </script>
    }
